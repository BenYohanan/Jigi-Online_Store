@model Jigi.Models.ApplicationUser

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid bg-dark">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mb-5 mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">SIGN IN</h3></div>
                    <div class="card-body">
                        <form method="post" asp-controller="Account">
                            <div asp-validation-summary="ModelOnly"></div>

                            <div class="form-floating mb-3">
                                <input asp-for="Email" class="form-control" type="email" placeholder="name@example.com" />
                                <label asp-for="Email"><i class='fas fa-envelope-open' style='font-size:18px; color:#161515;'></i><b> Email</b></label>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
                                <label asp-for="Password"><i class='fas fa-lock' style='font-size:18px; color: #161515;'></i><b> Password </b></label>
                            </div>

                            <div class="form-check mb-3">
                                <input asp-for="RememberPassword" class="form-check-input" type="checkbox" />
                                <label asp-for="RememberPassword" class="form-check-label">Remember Password</label>
                            </div>

                            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                <a class="small" href="password.html">Forgot Password?</a>
                                <button asp-action="Login" type="submit" class="btn-dark">Login</button>
                            </div>

                        </form>
                    </div>
                    <div class="card-footer text-center py-3">
                        <div class="small"><a asp-controller="Account" asp-action="Register">Need an account? Sign up!</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

