@model IEnumerable<Jigi.Models.Category>

@{
    ViewData["Title"] = "Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">

    <h1 class="mt-4">CATEGORIES</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
        <li class="breadcrumb-item active">Categories</li>
    </ol>

    <div class="card mb-4">
        <div class="card-body">
            <p class="text-center">Welcome to Admin</p>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Categories Details
            <a asp-controller="Admin" asp-action="UpdateCategory" class="btn btn-info fa-pull-right">Add New</a>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-striped" id="datatablesSimple" width="100%" cellspacing="0">

                    <thead>
                        <tr>
                            <th>Sr. No.</th>
                            <th>Category Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                 
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.CategoryName</td>
                                <td>
                                    <div class="w-75 btn-group">
                                        <a asp-controller="Admin" asp-action="EditCategory" asp-route-categoryId="@item.Id" class="btn btn-info mx-1 btn-sm ">Edit</a>
                                        <a asp-controller="Admin" asp-action="DeleteCategory" asp-route-categoryId="@item.Id" class="btn btn-danger btn-sm mx-1">Delect</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
    
</div>

