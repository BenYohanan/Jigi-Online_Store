@model IEnumerable<Jigi.Models.ApplicationUser>

@{
    ViewData["Title"] = "ListUsers";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Any())
{
    <div class="card mb-4">
        <div class="card-header">
            <h3>User List</h3>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-striped" id="datatablesSimple" width="100%" cellspacing="0">

                    <thead>
                        <tr class="text-center">
                            
                            <th>Name</th>
                            <th>Id</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                
                                <td>@user.FullName</td>
                                <td>@user.Id</td>
                                <td>@user.Email</td>
                                <td>@user.PhoneNumber</td>
                                <td>
                                    <div class="w-75 btn-group">
                                        <a asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@user.Id" 
                                           class="btn btn-outline-dark btn-sm mx-1" 
                                           onclick="return confirm('Are you sure you want to delete user: @user.UserName')"> 
                                            Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
}
else
{
    <h4>NO REGISTERED USER</h4>
}

