@model Jigi.ViewModel.EditRoleViewModel

@{
    ViewData["Title"] = "EditRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7">

            <div class="card shadow-lg border-0 rounded-lg mb-5 mt-5">
                <div class="card-header text-center">
                    <h3>Users in this role</h3>
                </div>
                <div class="card-body">
                    @if (Model.Users.Any())
                    {
                        foreach (var user in Model.Users)
                        {
                            <p class="card-title text-center">@user</p>
                        }
                    }
                    else
                    {
                        <p class="card-title text-center">No user at the moment</p>
                    }
                </div>
                <div class="card-footer text-center">
                    <a asp-controller="Admin" asp-route-roleId="@Model.Id" asp-action="EditUserInRole" class="btn btn-dark btn-sm">Add/Remove User</a>
                </div>
            </div>
            



            <div class="card shadow-lg border-0 rounded-lg mb-5 mt-5">
                <div class="card-header"><h2 class="text-center font-weight-light my-4">Edit Role</h2></div>

                <div class="card-body">
                    <form asp-controller="Admin" method="post">
                        <div asp-validation-summary="ModelOnly"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Id" disabled class="form-control" />
                            <label asp-for="Id"></label>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="RoleName" class="form-control" />
                            <label asp-for="RoleName"></label>
                            <span asp-validation-for="RoleName" class="text-danger"></span>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small">
                        <button type="submit" class="btn btn-sm btn-dark">Update</button>
                        <a asp-action="ListRole" class="btn btn-sm btn-dark">Cancel</a>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>






